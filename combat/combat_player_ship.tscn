script/source = "extends CharacterBody2D

@onready var enemy = $\"../CombatEnemyTemplate\"
@onready var cannon_controller = $CannonController
@onready var ship_sprite = $Sprite2D

#+------------------+
#| Ship stat values |
#+------------------+

# Speed
const anchorspeed = 0
const anchor_acceleration = 50000
const combat_speed = 0.5


# Status
var anchored = false
var furled = false
var current_speed = 0

#+-------------+
#| Combat info |
#+-------------+


var enemy_dir:Vector2

func _ready():
	cannon_controller.target = enemy.actual_ship


func _physics_process(delta):
	if not Player.in_combat:
		return
	
	Signals.updateReloadTimer.emit(cannon_controller.reload_timer, cannon_controller.loaded_cannons, cannon_controller.cannon_count)
	handle_anchor()
	handle_rotation(delta)
	handle_sails(delta)
	handle_shooting()
	move_and_slide()
	
	#Update speed on player UI
	Signals.speed_changed.emit(floor(current_speed/1000.0))

func handle_rotation(delta):
	var turn_delta = Input.get_axis('left', 'right') * (Player.stats['turn_speed'] + Player.modifiers['steering']) * delta
	rotate(turn_delta)


func handle_sails(delta):
	if furled:
		if Input.is_action_just_pressed('up'):
			furled = false
		current_speed = move_toward(current_speed, Player.stats['max_furled_speed'], Player.stats['furled_acceleration'] * combat_speed * delta)
	else:
		if Input.is_action_just_pressed('down'):
			furled = true
		current_speed = move_toward(current_speed, Player.stats['max_speed'] + Player.modifiers['speed'], Player.stats['acceleration'] * combat_speed * delta)
		
	if anchored: current_speed = move_toward(current_speed, 0, anchor_acceleration * delta)
	
	velocity = -transform.y * current_speed * combat_speed * delta


func handle_anchor():
	if anchored:
		if Input.is_action_just_pressed('anchor'):
			anchored = false
			furled = true
			$Sprite2D/Anchor.visible = false
	else:
		if Input.is_action_just_pressed('anchor'):
			anchored = true
			$Sprite2D/Anchor.visible = true


func handle_shooting():
	if Input.is_action_just_pressed('interact') and not cannon_controller.firing:
		cannon_controller.fire()


func get_fire_direction():
	enemy_dir = global_position.direction_to(enemy.actual_ship.global_position)
	
	if (-transform.y).angle_to(enemy_dir) >= 0:
		return true
	else:
		return false
"

